                android:id="@+id/thumb_button_1"
                android:background="@drawable/white_button_layout"
                android:layout_width="@dimen/chord_activity_button_horizontal"
                android:layout_height="@dimen/chord_activity_button_vertical"
                grid:layout_columnWeight="1"
                grid:layout_rowWeight="1"
                grid:layout_gravity="fill_horizontal"
                android:layout_margin="1dp"
                android:src="@drawable/a_major_thumb"
                android:scaleType="centerCrop"
                android:contentDescription="Aye" />

