<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/level4_lesson2_title"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/level4_lesson2_title"
            android:textColor="#ffffff"
            android:layout_marginBottom="@dimen/padding_between_views"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/level4_lesson2_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/level4_lesson2_title"
            android:text="@string/level4_lesson2_tv1"
            android:textColor="#ffffff"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/level4_lesson2_iv1"
            android:src="@drawable/power_chord"
            android:layout_marginTop="@dimen/padding_between_views"
            android:layout_marginBottom="@dimen/padding_between_views"
            android:layout_below="@+id/level4_lesson2_tv1"
            android:layout_centerInParent="true"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/level4_lesson2_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level4_lesson2_iv1"
            android:textColor="#ffffff"
            android:text="@string/level4_lesson2_tv2"
            android:textSize="17sp"/>

    </RelativeLayout>
</ScrollView>