<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

            <TextView
                android:id="@+id/lv1_welcome_title"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:text="@string/level1_intro_welcome_title"
                android:textColor="#ffffff"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/lv1_intro_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lv1_welcome_title"
                android:text="@string/level1_intro_welcome"
                android:textColor="#ffffff"
                android:textSize="17sp"/>

        <ImageView
            android:id="@+id/lv1_intro_iv1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/swipeleft"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/lv1_intro_tv2"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/lv1_intro_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv1_intro_iv1"
            android:textColor="#ffffff"
            android:text="@string/level1_intro"
            android:textSize="17sp"/>

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/green_button_layout"
            android:onClick="level1Test"
            android:textSize="@dimen/button_text_size"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="@string/level1_test"
            android:textColor="@color/white"
            android:layout_below="@+id/lv1_intro_tv3"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</ScrollView>